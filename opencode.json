{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "instructions": ["AGENTS.md"],
  "agent": {
    "plan": {
      "disable": true,
      "permission": {
        "edit": "allow",
        "bash": {
          "*": "allow"
        }
      }
    },
    "fe-dev": {
      "tools": {
        "chrome-devtools*": true,
        "synergy*": true
      }
    },
    "qa": {
      "tools": {
        "chrome-devtools*": true
      }
    }
  },
  "tools": {
    "chrome-devtools*": true,
    "synergy*": false
  },
  "mcp": {
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "synergy": {
      "type": "local",
      "command": ["npx", "-y", "@synergy-design-system/mcp"],
      "enabled": true
    }
  }
}
